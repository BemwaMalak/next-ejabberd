{
    "name": "next-ejabberd",
    "version": "1.0.5",
    "description": "A modern TypeScript XMPP client for Next.js applications, designed to work seamlessly with Ejabberd servers",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "type": "commonjs",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "husky": "husky",
        "format": "prettier --write .",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BemwaMalak/next-ejabberd.git"
    },
    "bugs": {
        "url": "https://github.com/BemwaMalak/next-ejabberd/issues"
    },
    "homepage": "https://github.com/BemwaMalak/next-ejabberd",
    "keywords": [
        "ejabberd",
        "XMPP",
        "chat",
        "typescript",
        "client"
    ],
    "author": "Bemwa Malak",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.7.8",
        "events": "^3.3.0",
        "mime": "^4.0.4",
        "uuid": "^11.0.3"
    },
    "peerDependencies": {
        "@xmpp/client": "0.13.1",
        "@xmpp/jid": "0.13.1",
        "@xmpp/xml": "0.13.1",
        "ltx": "3.0.0",
        "next": ">=13.0.0"
    },
    "devDependencies": {
        "@types/axios": "^0.9.36",
        "@types/jest": "^29.5.12",
        "@types/mime": "^3.0.4",
        "@types/mime-types": "^2.1.4",
        "@types/xmpp__client": "^0.13.3",
        "@xmpp/client": "0.13.1",
        "@xmpp/jid": "0.13.1",
        "@xmpp/xml": "0.13.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ltx": "3.0.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.5.4",
        "prettier": "^3.4.2"
    }
}
